<!DOCTYPE html>
<html>
  <head>
    <title>MemoApp</title>
    <%= include_gon %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%# <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    </head>

    <body class="container">
      <%= render partial:'memes/menu' %>
      <div class="d-inline-flex" style="margin-top:20px;">
        <% if user_signed_in? %>
          <%= button_to "Logout", destroy_user_session_path, method: :delete, class:"btn btn-light position-relative top-30 end-0"%>

        <% else %>
          <%= button_to "Register", new_user_registration_path, method: :get, class:"btn btn-dark position-relative top-0 end-0 register"%>

          <%= button_to "Login", new_user_session_path, method: :get, class:"btn btn-light position-relative top-30 end-0 login"%>
        <% end %>
      </div>
      <div class="notice"><%= notice %></div>
      <div class="alert"><%= alert %></div>

      <%= yield %>

    </body>
  </html>