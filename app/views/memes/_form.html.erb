<%= form_with(model: meme) do |form| %>
<% if meme.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(meme.errors.count, "error") %>
      prohibited this meme from being saved:</h2>

    <ul>
      <% meme.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
  <%= form.label :title %>
  <%= form.text_field :title %>
</div>

<div class="field">

  <%= form.label :picture %>
  <%= form.file_field :picture %>
</div>

<div class="actions">
  <%= form.submit %>
</div>
<% end %>