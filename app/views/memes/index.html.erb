<p id="notice"><%= notice %></p>

<h1>Memes</h1>

<div class="container">
  <div class="row row-cols-md-5 row-cols-sm-3 row-cols-1 justify-content-center">
    <% @memes.each do |meme| %>

      <div class="col">
        <%= meme.title %>
        <% if(meme.picture.url) %>
          <%= image_tag(meme.picture.thumb.url) %>
        <% end %>
        <%= link_to 'Show', meme %>
        <%= link_to 'Edit', edit_meme_path(meme) %>
        <%= link_to 'Destroy', meme, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>
  </div>
</div>

<br>

<%= link_to 'New Meme', new_meme_path %>